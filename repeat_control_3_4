자연수 n을 입력받아서 다음과 같이 출력하는 프로그램을 작성하시오.


import java.util.Scanner;

public class repeat_control_3_4 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		
		 for (int i = 0; i < n; i++){
	         for (int j = 1; j <= i; j++){
	          System.out.print(" ");
	         }
	         for(int j = 1; j <= n-i ; j++){
	          System.out.print("*");
	         }
	         System.out.println();
	     }
	}
}
