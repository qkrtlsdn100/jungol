자연수 n( 3 <= n <= 10) 을 입력받아 다음과 같이 영문자를 출력하는 프로그램을 작성하시오.


import java.util.Scanner;

public class repeat_control_3_6 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		int n = scan.nextInt();
		char a = 'A';
		
		if (3 <= n && n <= 10) {
			for (int i = 0; i < n; i++) {
				for (int j = i; j < n; j++) {
					System.out.print(a);
					a++;
				}
				System.out.println();
			}
		}
	}
}
