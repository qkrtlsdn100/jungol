import java.util.Scanner;

public class repeat_control_3_ev_5 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		int a = scan.nextInt();
		for (int i = 0; i < a; i++) {
			for (int j = 0; j < a * 2 - i * 2; j++) {
				System.out.printf(" ");
			}
			for (int j = 0; j < i * 2 + 1; j++) {
				System.out.printf("*");
			}
			System.out.printf("\n");
		}
	}
}
